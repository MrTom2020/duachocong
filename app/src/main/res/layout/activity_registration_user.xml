<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ThemXoaSua_LietKeThongKe.registration_user"
        android:background="@color/mau1">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="354dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="119dp"
            android:layout_marginEnd="26dp"
            android:text="ĐĂNG KÝ TÀI KHOẢN"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="53dp"
            android:layout_toStartOf="@+id/edtten"
            android:text="Tên Đăng Nhập" />

        <EditText
            android:id="@+id/edtten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="34dp"
            android:ems="10"
            android:inputType="textEmailSubject"
            android:hint="Email Đăng Nhập...."/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="56dp"
            android:layout_toStartOf="@+id/edtmk"
            android:text="Mật Khẩu" />

        <EditText
            android:id="@+id/edtmk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtten"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="34dp"
            android:ems="10"
            android:hint="Mật Khẩu Đăng Nhập"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="89dp"
            android:layout_marginEnd="46dp"
            android:layout_toStartOf="@+id/edtdiachi"
            android:text="Địa Chỉ" />

        <EditText
            android:id="@+id/edtdiachi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtmk"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="34dp"
            android:ems="10"
            android:hint="Thông Tin Địa Chỉ"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="115dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="53dp"
            android:layout_toStartOf="@+id/editTextDate"
            android:text="Ngày Sinh" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtdiachi"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="34dp"
            android:ems="10"
            android:hint="Nhập Ngày Sinh"
            android:inputType="date" />

        <Button
            android:id="@+id/btndd"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextDate"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="64dp"
            android:text="Đồng Ý"
            android:background="@drawable/tuybiennut" />

        <Button
            android:id="@+id/btnthoat"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextDate"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="74dp"
            android:text="Thoát"
            android:background="@drawable/tuybiennut"/>
    </RelativeLayout>
</ScrollView>